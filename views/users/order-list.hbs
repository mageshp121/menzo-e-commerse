<section>
    <div class="container">
        <div class="row">
            <table class="orderTable  table  border-dark; table-hover table-bordered">
                <thead class="thead-dark ">
                    <tr>
                        <th class="align-middle" scope="col">NO.</th>
                        <th class="align-middle" scope="col">Order-Id</th>
                        <th class="align-middle" scope="col">Adress</th>
                        <th class="align-middle" scope="col">Amountt</th>
                        <th class="align-middle" scope="col">Status</th>
                        <th class="align-middle" scope="col">Products</th>
                        <th class="align-middle" scope="col">Payment-method</th>
                        <th class="align-middle" scope="col">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each history}}
                    <tr>
                        <th class="create_index align-middle "></th>
                        <td class="align-middle">{{this._id}}</td>
                        <td class="align-middle">
                            <h6>Adress:{{this.deliveryDetails.address}}</h6>
                            <h6>City:{{this.deliveryDetails.city}}</h6>
                            <h6>state:{{this.deliveryDetails.State}}</h6>
                            <h6>Pincode{{this.deliveryDetails.pincode}}</h6>
                            <h6>Mobile{{this.deliveryDetails.Mobile}}</h6>
                        </td>
                        <td class="align-middle">₹ {{this.totalAmount}}</td>
                        <td class="align-middle">{{this.status}}</td>
                        <td class="align-middle"><a class="rounded btn btn-light border-dark"
                                href="/user/view-product?id={{this._id}}">view-product</a></td>
                        <td class="align-middle">{{this.PaymentMethod}}</td>
                        <td class="align-middle">
                            {{#if retured}}
                            {{#if this.Cancel}}
                            <button onclick="cancel('{{this._id}}')" class="btn border-danger">Cancel</button>
                            {{/if}}
                            {{#if this.Return}}
                            <button onclick="retured('{{this._id}}')" class="btn  border-success">Return</button>
                            {{/if}}
                            {{else}}
                            {{#if this.procancel}}
                            <p class="text-danger" style="width:10rem ;">refund will credit into you'r bank account within 1 day</p>
                            {{else}}
                            {{#if cstCancel}}
                            <p class="text-success" style="width:10rem ;">Order succesfully canceld</p>
                            {{else}}
                            <div style="width:15rem ;">
                            <p class="text-success" style="width:10rem ;">product will collect our delivery partener within 1 day</p>
                            </div>
                            {{/if}}
                            {{/if}}
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
