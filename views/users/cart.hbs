<!-- Shopping Cart Section Begin -->
{{#if cartItems}}
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each cartItems }}
                            <tr>
                                <td class="product__cart__item">
                                    <div class="product__cart__item__pic">
                                        <img style="width:60px ;height:60px;"
                                            src="/product-images/{{this.productDetails._id}}.jpg" alt="">
                                    </div>
                                    <div class="product__cart__item__text">
                                        <h6>{{this.productDetails.productname}}</h6>
                                    </div>
                                </td>
                                <td class="quantity__item" style="padding-right: 10px;">
                                    <div style="margin-top:0px;">
                                        <button type="submit" style="background-color:#bfbfbf;border-radius: 10px;"
                                            class="btn px-3 me-2"
                                            onclick="changeQuantity('{{this._id}}','{{this.productDetails._id}}','{{../userA._id}}',-1)">-</button>
                                        <span style="margin-right: 3px;"
                                            id="{{this.productDetails._id}}">{{this.quantity}}</span>
                                        <button type="submit" style="background-color:#bfbfbf; border-radius: 10px;"
                                            class="btn  px-3 me-2"
                                            onclick="changeQuantity('{{this._id}}','{{this.productDetails._id}}','{{../userA._id}}',1)">+</button>
                                    </div>
                                </td>
                                <td class="cart__price">₹{{this.productDetails.price}}</td>
                                <td class="cart__close">
                                    <button type="submit" class="btn px-3 me-2" style="border-color: red;"
                                        onclick="RemoveFromCart('{{this._id}}','{{this.productDetails._id}}')">Remove</button>
                                </td>
                            </tr>
                            {{/each}}


                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a href="/">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn update__btn">
                            <a href="#"><i class="fa fa-spinner"></i>Update cart</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">

                <div class="cart__total">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Total<span id="emount">₹{{Totalemount}}</span></li>
                    </ul>
                    <a href="/order" class="primary-btn">Proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>
{{else}}
<section >
    <div class="container">
    <div class="maindiv  col-12 col-md-12  " >
      <div class="row">
        <div class=" main2 col-12 col-md-12  w-100 p-3" style="height:500px;"> <img class="img1" src="../img/empty_shoppin_bag_4x.webp" class="img-fluid" alt="Responsive image"></div> 
        <div class="col-12 col-md-12">
          <div class="row">
            <div class="mv">
               <h1>Empty...!</h1>
            <a  class="btn btn-dark ml-4" href="/">Go Home</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </section>
{{/if}}
