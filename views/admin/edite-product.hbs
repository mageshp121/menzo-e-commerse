 
 
 <section>
<div class="container" style="width: 57rem; margin-left: 23;margin-top: 10rem;">
    <div class="card">
            <div class="card-body " style="background-color: #CAF1DE;" >
              <h5 class="card-title">Edite product</h5>
              <!-- Horizontal Form -->
              <form  action="/admin/edite-product/{{products._id}}" method="post" enctype="multipart/form-data">
              
                <div class="row mb-3">
                  <label for="inputEmail3"  class="col-sm-2 col-form-label">productName</label>
                  <div class="col-sm-10">
                    <input type="text" name="productname" class="form-control" value="{{products.productname}}">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Description</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="productdiscription" value="{{products.productdiscription}}">
